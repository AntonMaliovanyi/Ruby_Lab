<h1>Contacts</h1>
<%= link_to "New Contact", new_contact_path, class: "btn btn-primary mb-3" %>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>User ID</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.user_id %></td>
            <td>
            <%= link_to "Show", contact_path(contact), class: "btn btn-info btn-sm" %>
            <%= link_to "Edit", edit_contact_path(contact), class: "btn btn-warning btn-sm" %>
            <%= link_to "Delete", contact_path(contact), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
            </td>
      </tr>
    <% end %>
  </tbody>
</table>
